
{% extends "base.html.twig" %}

{% block title %}El Resto-Restaurant-Menu {% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/nice-select.css') }}">
{% endblock %}


{% block header %}
<header class="header-area header-area2">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="logo-area">

                        <a href="{{ app.request.getBaseURL() }}"><img src="{{ asset('assets/images/sprites/sprites.png') }}" alt="logo" style="object-fit: none;object-position: -10px -600px;width: 182px;height: 53px;" ></a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="custom-navbar">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <div class="main-menu main-menu2">
                    {% block menu %}
                      {{parent()}}
                    {% endblock%}
                    </div>
                </div>
            </div>
        </div>
    </header>
{% endblock%}

{% block banner %}
<section class="banner-area banner-area2 menu-bg text-center">
      <div class="container">
          <div class="row">
              <div class="col-lg-12">
                  <h1><i>Our Menu</i></h1>
                  <p class="pt-2"><i>Beast kind form divide night above let moveth bearing darkness.</i></p>
              </div>
          </div>
      </div>
  </section>
{% endblock %}

{% block content %}
<section class="food-area section-padding">


    <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-8 " style="margin-left: 10%">


                    <div class="section-top " >
                        <form action="{{ path('menu_page') }}" method="get">
                            <h5>Categorie</h5>
                            <div class="default-select" id="default-select">
                                <select name="categorie" style="display: none;">
                                    <option value="">Tous</option>
                                    {% for categorie in categories %}

                                        <option value="{{ categorie.nom }}">{{ categorie.nom }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <h5>Plat</h5>
                            <input type="text" name="query" placeholder="Rosemary Chicken" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Rechercher un plat'"  class="single-input " style="border-color:#FFFF00">
                            <br>
                            <input type="submit" class="genric-btn success circle" value="Rechercher"></input>

                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-5 " style="margin-left: 30%">
                    <div class="section-top align-self-center" >
                        <h3><span class="style-change">{{ nombre }} resultat(s)</span> <br></h3>
                        <p class="pt-3"></p>
                    </div>
                </div>
            </div>
            <div class="row">
                {% if (results) %}
                    {% for result in results %}

                    <div class="col-md-4 col-sm-6">
                        <div class="single-food">
                            <div class="food-img">
                                <img src="{{ result.url }}" class="img-fluid" alt="{{ result.descriptionimage }}">
                            </div>
                            <div class="food-content">
                                <div class="d-flex justify-content-between">
                                    <h5>{{ result.nom }}</h5>
                                    <span class="style-change">{{ result.prix }}</span>
                                </div>
                                <p class="pt-3">{{ result.descriptioncourte }}</p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}


                {% endif %}


            </div>
            <div>
                {% if(page>1) %}

                    <a href="{{ path('menu_page', {'query':query,'offset':(offset-limit),'limit':limit,'categorie':categorie} ,relative=false) }}" class="genric-btn primary-border circle">Précédent</a>
                {% endif %}
                {% if(page<page_max) %}
                    <a href="{{ path('menu_page', {'query':query,'offset':(offset+limit),'limit':limit,'categorie':categorie} ,relative=false) }}" class="genric-btn primary-border circle">Suivant</a>

                {%  endif %}


            </div>
        <div>
        </div>
        </div>
    </section>
{% endblock %}
